<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!-- Mensaje cuando no hay reseñas -->
    <LinearLayout
        android:id="@+id/layoutSinResenas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="32dp"
        android:visibility="gone">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@android:drawable/ic_dialog_info"
            android:tint="#CCCCCC"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No hay reseñas aún"
            android:textSize="16sp"
            android:textColor="#999999"
            android:fontFamily="@font/poppins_medium"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Sé el primero en dejar una reseña"
            android:textColor="#CCCCCC"
            android:textSize="14sp" />

    </LinearLayout>

    <!-- ✅ Contenedor de reseñas (sin ListView, sin scroll propio) -->
    <LinearLayout
        android:id="@+id/containerResenas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" />

    <!-- Botón flotante para agregar reseña -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabAgregarResena"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_margin="16dp"
        android:src="@android:drawable/ic_input_add"
        android:contentDescription="Agregar reseña"
        app:tint="@android:color/white"
        app:backgroundTint="#3469CC" />

</LinearLayout>