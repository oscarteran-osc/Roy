<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".login.Registro3">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">
        <ImageButton
            android:id="@+id/rowregresar3"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:background="@android:color/transparent"
            android:src="@drawable/backrow"/>
        <ImageView
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_marginTop="30dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/royazul"/>
    </FrameLayout>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginHorizontal="25dp"
        android:textSize="20sp"
        android:fontFamily="@font/poppins_medium"
        android:hint="Correo electr칩nico"
        android:id="@+id/mail"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="25dp"
        android:textSize="20sp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/poppins_medium"
        android:hint="Contrase침a"
        android:id="@+id/contrase침a"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="25dp"
        android:textSize="20sp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/poppins_medium"
        android:hint="Confirmar contrase침a"
        android:id="@+id/checkcontra"/>
    <Button
        android:id="@+id/crearcuenta"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Crear cuenta"
        android:textColor="#0349A5"
        android:textSize="20sp"
        android:fontFamily="@font/poppins_medium"
        android:layout_marginTop="30dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/btnborde"/>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"
        />

    <TextView
        android:id="@+id/backlogin3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="180dp"
        android:text="@string/textiniciosesion"
        android:padding="8dp"
        android:textSize="16sp"
        android:layout_gravity="center_horizontal"/>
</LinearLayout>