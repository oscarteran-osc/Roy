<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center">

        <!-- Logo PayPal -->
        <ImageView
            android:layout_width="160dp"
            android:layout_height="80dp"
            android:src="@drawable/paypal_logo"
            android:layout_marginBottom="32dp"
            android:contentDescription="PayPal Logo"/>

        <!-- Card con información del pago -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            android:layout_marginBottom="32dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Resumen del pago"
                    android:textSize="18sp"
                    android:fontFamily="@font/poppins_semibold"
                    android:textColor="#1D1D1F"
                    android:layout_marginBottom="16dp"/>

                <!-- Artículo -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Artículo:"
                        android:textColor="#6B6B6B"
                        android:fontFamily="@font/poppins_regular"/>

                    <TextView
                        android:id="@+id/tvNombreArticulo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Objeto"
                        android:textColor="#1D1D1F"
                        android:fontFamily="@font/poppins_medium"
                        android:maxLines="2"
                        android:ellipsize="end"/>
                </LinearLayout>

                <!-- Total -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Total:"
                        android:textSize="18sp"
                        android:textColor="#1D1D1F"
                        android:fontFamily="@font/poppins_semibold"/>

                    <TextView
                        android:id="@+id/tvMontoTotal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$0.00"
                        android:textSize="24sp"
                        android:textColor="#0349A5"
                        android:fontFamily="@font/poppins_bold"/>
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Botón de pago simulado -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSimularPago"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pagar con PayPal"
            android:backgroundTint="#0349A5"
            android:textColor="@color/white"
            android:fontFamily="@font/poppins_semibold"
            app:cornerRadius="12dp"
            android:paddingVertical="16dp"
            android:layout_marginBottom="16dp"
            android:textSize="16sp"/>

        <!-- Información de seguridad -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="16dp"
            android:layout_marginBottom="16dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@android:drawable/ic_secure"
                android:tint="#4CAF50"
                android:layout_marginEnd="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pago simulado con PayPal Sandbox"
                android:textSize="14sp"
                android:textColor="#6B6B6B"
                android:fontFamily="@font/poppins_regular"/>
        </LinearLayout>

        <!-- Botón cancelar -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCancelar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cancelar"
            style="@style/Widget.Material3.Button.OutlinedButton"
            app:strokeColor="#134299"
            android:textColor="#134299"
            android:fontFamily="@font/poppins_medium"
            app:cornerRadius="12dp"/>

    </LinearLayout>
</ScrollView>