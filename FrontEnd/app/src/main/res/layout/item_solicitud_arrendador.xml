<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    android:backgroundTint="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- Fila: imagen + info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgObjeto"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginEnd="12dp"
                android:src="@drawable/taladro"
                android:scaleType="centerCrop"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvNombreObjeto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Taladro Truper"
                    android:textSize="16sp"
                    android:fontFamily="@font/poppins_semibold"/>

                <TextView
                    android:id="@+id/tvSolicitante"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Solicitante: Ana Luz"
                    android:textSize="14sp"
                    android:layout_marginTop="4dp"/>

                <TextView
                    android:id="@+id/tvFechaSolicitud"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fecha: 07/10/25"
                    android:textSize="14sp"
                    android:layout_marginTop="4dp"/>

            </LinearLayout>
        </LinearLayout>

        <!-- Estado -->
        <TextView
            android:id="@+id/tvEstado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PENDIENTE"
            android:textSize="14sp"
            android:fontFamily="@font/poppins_semibold"
            android:layout_marginTop="8dp"/>

        <!-- Botones -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <Button
                android:id="@+id/btnAceptar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Aceptar"
                android:backgroundTint="#4CAF50"
                android:layout_marginEnd="8dp"/>

            <Button
                android:id="@+id/btnRechazar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Rechazar"
                android:backgroundTint="#E91E1E"/>

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>