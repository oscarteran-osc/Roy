<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:backgroundTint="@color/white"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:strokeColor="@color/black"
    app:strokeWidth="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- Fila superior: imagen + info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgObjeto"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginEnd="12dp"
                android:src="@drawable/tiendacamp"
                android:scaleType="centerCrop"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvNombreObjeto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tienda de campaña"
                    android:textSize="16sp"
                    android:fontFamily="@font/poppins_semibold"/>

                <TextView
                    android:id="@+id/tvNombreArrendador"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="De: José Alberto"
                    android:textSize="14sp"
                    android:layout_marginTop="4dp"/>

                <TextView
                    android:id="@+id/tvFechaSolicitud"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fecha de solicitud: 05/10/25"
                    android:textSize="14sp"
                    android:layout_marginTop="4dp"/>

            </LinearLayout>
        </LinearLayout>

        <!-- Estado -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Estado: "
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/tvEstado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Aceptada"
                android:textColor="#4CAF50"
                android:textSize="14sp"
                android:fontFamily="@font/poppins_semibold"/>
        </LinearLayout>

        <!-- Fecha respuesta -->
        <TextView
            android:id="@+id/tvFechaRespuesta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fecha de respuesta: 06/10/25"
            android:textSize="14sp"
            android:layout_marginTop="4dp"/>

        <!-- Botón de acción -->
        <Button
            android:id="@+id/btnAccion"
            android:layout_width="170dp"
            android:layout_height="42dp"
            android:layout_marginTop="8dp"
            android:backgroundTint="#134299"
            android:text="Pagar"
            android:textColor="@color/white"/>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>