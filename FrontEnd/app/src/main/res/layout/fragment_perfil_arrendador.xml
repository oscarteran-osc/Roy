<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:padding="20dp"
    android:background="@drawable/bg_perfil_azul">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingBottom="14dp">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/imgAvatarArr"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:src="@drawable/profileuser"
                android:layout_marginTop="12dp"
                app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.ExtraExtraLarge" />

            <TextView
                android:id="@+id/tvNombreArr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre Usuario"
                android:textColor="@android:color/white"
                android:textSize="22sp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/poppins_bold"/>

            <TextView
                android:id="@+id/tvRegionArr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CDMX"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:alpha="0.9"
                android:fontFamily="@font/poppins_regular"/>

            <TextView
                android:id="@+id/tvReputacionPromedioArr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="⭐ 0.0"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/poppins_bold"/>

            <TextView
                android:id="@+id/tvTotalResenasArr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:alpha="0.85"
                android:fontFamily="@font/poppins_regular"/>
        </LinearLayout>

        <!-- Card: Calificar -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="18dp"
            app:cardUseCompatPadding="true"
            app:cardElevation="6dp"
            android:layout_marginBottom="14dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Calificar arrendador"
                    android:textSize="16sp"
                    android:textColor="#1D1D1F"
                    android:fontFamily="@font/poppins_bold"/>

                <RatingBar
                    android:id="@+id/rbCalificarArr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="5"
                    android:stepSize="1"
                    android:layout_marginTop="10dp"/>

                <EditText
                    android:id="@+id/etComentarioArr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Comentario (opcional)"
                    android:layout_marginTop="10dp"
                    android:minLines="2"
                    android:maxLines="4"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnEnviarCalificacionArr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Enviar calificación"
                    android:textColor="@android:color/white"
                    app:cornerRadius="14dp"
                    app:backgroundTint="#1E88E5"
                    android:layout_marginTop="12dp"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Card: Objetos -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="18dp"
            app:cardUseCompatPadding="true"
            app:cardElevation="6dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Objetos del arrendador"
                    android:textSize="16sp"
                    android:textColor="#1D1D1F"
                    android:fontFamily="@font/poppins_bold"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvObjetosArrendador"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
