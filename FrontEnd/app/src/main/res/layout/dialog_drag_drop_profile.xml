<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@android:color/white">

    <!-- TÃ­tulo -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Foto de perfil"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Arrastra una imagen o selecciona desde tu dispositivo"
        android:textSize="14sp"
        android:textColor="@color/gray_text"
        android:layout_marginBottom="24dp"/>

    <!-- Zona de Drag & Drop -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/drop_zone"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="0dp"
        app:strokeColor="#E0E0E0"
        app:strokeWidth="4dp"
        android:backgroundTint="#F5F5F5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="24dp">

            <ImageView
                android:id="@+id/icon_drop"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_cloud_upload"
                android:contentDescription="Upload"
                app:tint="@color/gray_text"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Arrastra tu foto aquÃ­"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/gray_dark"
                android:layout_marginTop="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="o usa los botones de abajo"
                android:textSize="13sp"
                android:textColor="@color/gray_text"
                android:layout_marginTop="4dp"/>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Botones de acciÃ³n -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp">

        <!-- BotÃ³n Explorar Archivos -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_explorar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="ðŸ“ Explorar archivos"
            android:textSize="15sp"
            android:textStyle="bold"
            app:cornerRadius="12dp"
            app:backgroundTint="@color/blue_primary"
            android:textColor="@android:color/white"/>

        <!-- BotÃ³n Tomar Foto -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_tomar_foto"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="12dp"
            android:text="ðŸ“· Tomar foto"
            android:textSize="15sp"
            app:cornerRadius="12dp"
            style="@style/Widget.Material3.Button.OutlinedButton"
            app:strokeColor="@color/blue_primary"
            android:textColor="@color/blue_primary"/>

        <!-- BotÃ³n Desde URL -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_desde_url"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="12dp"
            android:text="ðŸŒ Desde URL"
            android:textSize="15sp"
            app:cornerRadius="12dp"
            style="@style/Widget.Material3.Button.OutlinedButton"
            app:strokeColor="@color/blue_primary"
            android:textColor="@color/blue_primary"/>

        <!-- BotÃ³n Quitar Foto (se oculta si no hay foto) -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_quitar_foto"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="12dp"
            android:text="ðŸ—‘ï¸ Quitar foto"
            android:textSize="15sp"
            app:cornerRadius="12dp"
            style="@style/Widget.Material3.Button.OutlinedButton"
            app:strokeColor="#F44336"
            android:textColor="#F44336"/>

    </LinearLayout>

    <!-- BotÃ³n Cancelar -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_cancelar_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Cancelar"
        android:textSize="14sp"
        style="@style/Widget.Material3.Button.TextButton"
        android:textColor="@color/gray_text"/>

</LinearLayout>