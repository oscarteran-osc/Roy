<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/white"
    tools:context=".home.CategoryFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="16dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/topBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="16dp"
            android:paddingVertical="12dp"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/bg_circle_white"
                android:padding="6dp"
                android:src="@drawable/atras"
                app:tint="@color/blue_primary"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <TextView
                android:id="@+id/tvTituloCategoria"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Eventos"
                android:textColor="@color/blue_dark"
                android:textSize="20sp"
                android:fontFamily="@font/poppins_bold"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginStart="16dp"
                app:layout_constraintStart_toEndOf="@id/btnBack"
                app:layout_constraintEnd_toStartOf="@id/btnFiltros"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <ImageView
                android:id="@+id/btnFiltros"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/bg_circle_white"
                android:padding="6dp"
                android:src="@drawable/ic_menu"
                app:tint="@color/blue_primary"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardSearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="8dp"
            app:cardCornerRadius="24dp"
            app:cardElevation="2dp"
            app:layout_constraintTop_toBottomOf="@id/topBar">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:paddingHorizontal="16dp"
                android:gravity="center_vertical"
                android:background="@color/white">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_search"
                    app:tint="@color/gray_text" />

                <EditText
                    android:id="@+id/etBuscarObjeto"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:background="@android:color/transparent"
                    android:hint="Buscar en esta categoría..."
                    android:inputType="text"
                    android:textColor="@color/blue_dark"
                    android:textColorHint="@color/gray_text"
                    android:textSize="14sp"
                    android:fontFamily="@font/poppins_regular" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardBanner"
            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="18dp"
            app:cardElevation="6dp"
            android:foreground="?attr/selectableItemBackground"
            app:layout_constraintTop_toBottomOf="@id/cardSearch">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_gradient_blue_primary"> <ImageView
                android:id="@+id/imgBannerCategoria"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginEnd="16dp"
                android:src="@drawable/camara"
                android:scaleType="centerCrop"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

                <TextView
                    android:id="@+id/tvPillCategoria"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:text="Eventos"
                    tools:ignore="MissingConstraints" />

                <TextView
                    android:id="@+id/tvBannerTitulo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:text="Todo para tu próximo evento"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:fontFamily="@font/poppins_semibold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/imgBannerCategoria"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/tvBannerSub"
                    app:layout_constraintVertical_chainStyle="packed" />

                <TextView
                    android:id="@+id/tvBannerSub"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="4dp"
                    android:text="Renta carpas, bocinas y más sin complicarte."
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:fontFamily="@font/poppins_regular"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/imgBannerCategoria"
                    app:layout_constraintTop_toBottomOf="@id/tvBannerTitulo"
                    app:layout_constraintBottom_toTopOf="@id/btnVerDestacados" />

                <TextView
                    android:id="@+id/btnVerDestacados"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="16dp"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="8dp"
                    android:background="@drawable/bg_button_orange"
                    android:text="Ver destacados"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:fontFamily="@font/poppins_semibold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvBannerSub"
                    app:layout_constraintBottom_toBottomOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <HorizontalScrollView
            android:id="@+id/scrollViewChips"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:overScrollMode="never"
            android:scrollbars="none"
            android:paddingHorizontal="16dp"
            app:layout_constraintTop_toBottomOf="@id/cardBanner">

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chipGroupFiltros"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:singleLine="true"
                app:singleSelection="true"
                app:selectionRequired="false"
                app:chipSpacingHorizontal="8dp">

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipTodo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:checkable="true"
                    android:checked="true"
                    android:text="Todo"
                    android:textColor="@color/chip_text_selector"
                    app:chipBackgroundColor="@color/chip_background_selector"
                    app:checkedIconVisible="false" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipCerca"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:checkable="true"
                    android:text="Cerca de ti"
                    android:textColor="@color/chip_text_selector"
                    app:chipBackgroundColor="@color/chip_background_selector"
                    app:checkedIconVisible="false" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipBarato"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:checkable="true"
                    android:text="Más económico"
                    android:textColor="@color/chip_text_selector"
                    app:chipBackgroundColor="@color/chip_background_selector"
                    app:checkedIconVisible="false" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipPopular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:checkable="true"
                    android:text="Más popular"
                    android:textColor="@color/chip_text_selector"
                    app:chipBackgroundColor="@color/chip_background_selector"
                    app:checkedIconVisible="false" />

            </com.google.android.material.chip.ChipGroup>
        </HorizontalScrollView>

        <LinearLayout
            android:id="@+id/resultsHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:paddingHorizontal="16dp"
            android:gravity="center_vertical"
            app:layout_constraintTop_toBottomOf="@id/scrollViewChips">

            <TextView
                android:id="@+id/tvResultadosTitulo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Resultados de la búsqueda"
                android:textColor="@color/blue_dark"
                android:textSize="18sp"
                android:fontFamily="@font/poppins_semibold" />

            <TextView
                android:id="@+id/tvResultadosCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0 objetos"
                android:textColor="@color/gray_text"
                android:textSize="14sp"
                android:fontFamily="@font/poppins_regular" />
        </LinearLayout>

        <ListView
            android:id="@+id/lvObjetosCategoria"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:divider="@android:color/transparent"
            android:dividerHeight="12dp"
            android:paddingHorizontal="16dp"
            app:layout_constraintTop_toBottomOf="@id/resultsHeader" />

        <TextView
            android:id="@+id/empty_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="32dp"
            android:text="No se encontraron objetos que coincidan con los filtros aplicados. ¡Intenta con otra búsqueda!"
            android:textColor="@color/gray_text"
            android:textSize="14sp"
            android:fontFamily="@font/poppins_regular"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/resultsHeader" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>