<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header con botón atrás -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:gravity="center_vertical">

            <ImageButton
                android:id="@+id/btnBackPerfil"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginStart="8dp"
                android:src="@drawable/atras"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Regresar" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Perfil del Arrendador"
                android:textSize="20sp"
                android:textColor="@color/blue_primary"
                android:fontFamily="@font/poppins_semibold"
                android:gravity="center"
                android:layout_marginEnd="48dp" />

        </LinearLayout>

        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Información del arrendador -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:gravity="center_horizontal">

            <!-- Foto de perfil -->
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/imgAvatarArr"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:scaleType="centerCrop"
                android:src="@drawable/profileuser"
                app:shapeAppearanceOverlay="@drawable/bg_circle_white" />

            <!-- Nombre -->
            <TextView
                android:id="@+id/tvNombreArr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Sofía Ramírez"
                android:textSize="24sp"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_semibold" />

            <!-- Región -->
            <TextView
                android:id="@+id/tvRegionArr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="CDMX - Benito Juárez"
                android:textSize="14sp"
                android:textColor="@color/gray_light"
                android:fontFamily="@font/poppins_regular" />

            <!-- Reputación -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tvReputacionPromedioArr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="⭐ 0.0"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/poppins_medium" />

                <TextView
                    android:id="@+id/tvTotalResenasArr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text=""
                    android:textSize="14sp"
                    android:textColor="@color/gray_light"
                    android:fontFamily="@font/poppins_regular" />

            </LinearLayout>

        </LinearLayout>

        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="8dp" />

        <!-- Sección de calificación -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:background="#F5F8FF">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Calificar arrendador"
                android:textSize="18sp"
                android:textColor="@color/blue_primary"
                android:fontFamily="@font/poppins_semibold"
                android:layout_marginBottom="12dp" />

            <!-- Rating Bar -->
            <RatingBar
                android:id="@+id/rbCalificarArr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:stepSize="1"
                android:rating="0"
                android:progressTint="#FFD700"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="12dp" />

            <!-- Campo de comentario -->
            <EditText
                android:id="@+id/etComentarioArr"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:hint="Comentario (opcional)"
                android:gravity="top|start"
                android:padding="12dp"
                android:fontFamily="@font/poppins_regular"
                android:textSize="14sp"
                android:inputType="textMultiLine"
                android:maxLines="4"
                android:layout_marginBottom="12dp" />

            <!-- Botón enviar calificación -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnEnviarCalificacionArr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Enviar calificación"
                android:textSize="16sp"
                android:fontFamily="@font/poppins_medium"
                android:paddingVertical="12dp"
                android:backgroundTint="#3469CC"
                android:textAllCaps="false" />

        </LinearLayout>

        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="8dp" />

        <!-- Objetos del arrendador -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Objetos del arrendador"
                android:textSize="18sp"
                android:textColor="@color/blue_primary"
                android:fontFamily="@font/poppins_semibold"
                android:layout_marginBottom="12dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvObjetosArrendador"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:clipToPadding="false"
                android:paddingStart="4dp"
                android:paddingEnd="4dp" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>