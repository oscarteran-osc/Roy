<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/blue_primary"
            android:orientation="vertical"
            android:padding="16dp">

            <LinearLayout
                android:layout_marginTop="23dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/search_bar_background"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="16dp"
                android:paddingEnd="16dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_search"
                    android:contentDescription="Search"
                    app:tint="@color/gray_text"/>

                <EditText
                    android:id="@+id/search_bar"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:hint="¿Qué necesitas rentar hoy?"
                    android:textColorHint="@color/gray_text"
                    android:textSize="14sp"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:inputType="text"/>

                <ImageView
                    android:id="@+id/menu_icon"
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:src="@drawable/ic_menu"
                    android:contentDescription="Menu"
                    android:clickable="true"
                    android:focusable="true"
                    app:tint="@color/gray_text"/>

            </LinearLayout>

            <HorizontalScrollView
                android:id="@+id/categories_scroll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                android:layout_marginTop="16dp">

                <LinearLayout
                    android:id="@+id/categories_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@color/orange_primary"
                    android:padding="8dp">

                    <TextView
                        android:id="@+id/category_todo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Todo"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                       android:paddingHorizontal="12dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?attr/selectableItemBackground"/>

                    <TextView
                        android:id="@+id/category_eventos"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Eventos"
                        android:textColor="@android:color/white"
                        android:paddingHorizontal="12dp"
                        android:layout_marginStart="8dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?attr/selectableItemBackground"/>

                    <TextView
                        android:id="@+id/category_tecnologia"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tecnología"
                        android:textColor="@android:color/white"
                        android:paddingHorizontal="12dp"
                        android:layout_marginStart="8dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?attr/selectableItemBackground"/>

                    <TextView
                        android:id="@+id/category_transporte"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Transporte"
                        android:textColor="@android:color/white"
                        android:paddingHorizontal="12dp"
                        android:layout_marginStart="8dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?attr/selectableItemBackground"/>

                    <TextView
                        android:id="@+id/category_herramientas"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Herramientas"
                        android:textColor="@android:color/white"
                        android:paddingHorizontal="12dp"
                        android:layout_marginStart="8dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?attr/selectableItemBackground"/>

                    <TextView
                        android:id="@+id/category_hogar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hogar y Muebles"
                        android:textColor="@android:color/white"
                        android:paddingHorizontal="12dp"
                        android:layout_marginStart="8dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?attr/selectableItemBackground"/>

                    <TextView
                        android:id="@+id/category_deportes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Deportes y Aire Libre"
                        android:textColor="@android:color/white"
                        android:paddingHorizontal="12dp"
                        android:layout_marginStart="8dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?attr/selectableItemBackground"/>

                    <TextView
                        android:id="@+id/category_electrodomesticos"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Electrodomesticos"
                        android:textColor="@android:color/white"
                        android:paddingHorizontal="12dp"
                        android:layout_marginStart="8dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?attr/selectableItemBackground"/>

                    <TextView
                        android:id="@+id/category_ropa"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ropa Y Accesorios"
                        android:textColor="@android:color/white"
                        android:paddingHorizontal="12dp"
                        android:layout_marginStart="8dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?attr/selectableItemBackground"/>

                    <TextView
                        android:id="@+id/category_juegos"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Juegos y Entretenimiento"
                        android:textColor="@android:color/white"
                        android:paddingHorizontal="12dp"
                        android:layout_marginStart="8dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?attr/selectableItemBackground"/>

                    <TextView
                        android:id="@+id/category_mascotas"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mascotas"
                        android:textColor="@android:color/white"
                        android:paddingHorizontal="12dp"
                        android:layout_marginStart="8dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?attr/selectableItemBackground"/>

                </LinearLayout>
            </HorizontalScrollView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="190dp"
                        android:layout_height="158dp"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="0dp"
                        android:contentDescription="Products"
                        android:src="@drawable/banner_image" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginBottom="7dp"
                        android:orientation="vertical"
                        android:gravity="end">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="end"
                            android:text="Renta, usa,\ndevuelve.\n¡Así de fácil!"
                            android:textColor="@color/blue_dark"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Descubre todas nuestras opciones.\nEncuentra lo que necesitas."
                            android:textColor="@color/gray_dark"
                            android:textSize="11sp"
                            android:gravity="end"/>

                        <TextView
                            android:id="@+id/explorar_mas_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="EXPLORA DE ESTO\nCERCA DE TI"
                            android:textColor="@color/orange_primary"
                            android:textStyle="bold"
                            android:textSize="8sp"
                            android:clickable="true"
                            android:focusable="true"
                            android:background="?attr/selectableItemBackground"
                            android:padding="8dp"
                            android:gravity="end"/>

                    </LinearLayout>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quizás te interesa..."
            android:textColor="@color/blue_dark"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_margin="16dp"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/featured_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="8dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            android:clickable="true"
            android:focusable="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp">

                <ImageView
                    android:id="@+id/imagen_destacado"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/tent_image"
                    android:scaleType="centerCrop"
                    android:contentDescription="Tent"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="16dp">

                    <!-- TÍTULO DEL DESTACADO -->
                    <TextView
                        android:id="@+id/titulo_destacado"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="La carpa perfecta para un fin de semana..."
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="14sp"/>

                    <!-- DESCRIPCIÓN DEL DESTACADO -->
                    <TextView
                        android:id="@+id/desc_destacado"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Carpas disponibles desde | $80.\nEncuentra la ideal según la ocasión."
                        android:textColor="@color/gray_text"
                        android:textSize="11sp"
                        android:layout_marginTop="8dp"/>

                    <Button
                        android:id="@+id/ver_mas_btn"
                        android:layout_width="match_parent"
                        android:layout_height="29dp"
                        android:layout_marginTop="8dp"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:gravity="end"
                        android:padding="4dp"
                        android:text="ver más"
                        android:textColor="@color/blue_primary"
                        android:textSize="12sp"
                        android:textStyle="bold" />


                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Te puede servir para..."
            android:textColor="@color/blue_dark"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"/>

        <HorizontalScrollView
            android:id="@+id/services_scroll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="horizontal"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">

            <LinearLayout
                android:id="@+id/services_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/service_item_1"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackground"
                    android:padding="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tu próximo\nproyecto"
                        android:textColor="@color/black"
                        android:textSize="11sp"
                        android:gravity="center"
                        android:layout_marginBottom="8dp"/>

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/item_printer"
                        android:scaleType="centerInside"
                        android:contentDescription="Printer"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/service_item_2"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackground"
                    android:padding="8dp"
                    android:layout_marginStart="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Escapada de fin\nde semana"
                        android:textColor="@color/black"
                        android:textSize="11sp"
                        android:gravity="center"
                        android:layout_marginBottom="8dp"/>

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/item_chair"
                        android:scaleType="centerInside"
                        android:contentDescription="Chair"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/service_item_3"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackground"
                    android:padding="8dp"
                    android:layout_marginStart="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Reparar algo sin\ngastar de más"
                        android:textColor="@color/black"
                        android:textSize="11sp"
                        android:gravity="center"
                        android:layout_marginBottom="8dp"/>

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/item_tools"
                        android:scaleType="centerInside"
                        android:contentDescription="Tools"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/service_item_4"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackground"
                    android:padding="8dp"
                    android:layout_marginStart="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ese evento\nespecial"
                        android:textColor="@color/black"
                        android:textSize="11sp"
                        android:gravity="center"
                        android:layout_marginBottom="8dp"/>

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/item_speaker"
                        android:scaleType="centerInside"
                        android:contentDescription="Speaker"/>

                </LinearLayout>

            </LinearLayout>

        </HorizontalScrollView>

    </LinearLayout>

</ScrollView>