<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="24dp"
    android:background="@color/white">

    <!-- Icono de éxito -->
    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/ic_check_circle"
        android:layout_marginBottom="24dp"
        app:tint="#4CAF50" />

    <!-- Título -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¡Pago Exitoso!"
        android:textSize="28sp"
        android:fontFamily="@font/poppins_bold"
        android:textColor="#1D1D1F"
        android:layout_marginBottom="16dp"/>

    <!-- Mensaje -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tu pago se ha procesado correctamente"
        android:textSize="16sp"
        android:fontFamily="@font/poppins_regular"
        android:textColor="#6B6B6B"
        android:gravity="center"
        android:layout_marginBottom="32dp"/>

    <!-- Card con detalles -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        android:layout_marginBottom="32dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Monto -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Monto pagado:"
                    android:textColor="#6B6B6B"
                    android:fontFamily="@font/poppins_regular"/>

                <TextView
                    android:id="@+id/tvMontoConfirmacion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$0.00"
                    android:textSize="20sp"
                    android:textColor="#4CAF50"
                    android:fontFamily="@font/poppins_bold"/>
            </LinearLayout>

            <!-- Método -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Método de pago:"
                    android:textColor="#6B6B6B"
                    android:fontFamily="@font/poppins_regular"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PayPal"
                    android:textColor="#1D1D1F"
                    android:fontFamily="@font/poppins_medium"/>
            </LinearLayout>

            <!-- Order ID -->
            <TextView
                android:id="@+id/tvOrderId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ID de orden: ---"
                android:textSize="12sp"
                android:textColor="#999999"
                android:fontFamily="@font/poppins_regular"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Botón volver -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnVolverInicio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Volver al Inicio"
        android:backgroundTint="#134299"
        android:textColor="@color/white"
        android:fontFamily="@font/poppins_medium"
        app:cornerRadius="12dp"
        android:paddingVertical="16dp"/>

</LinearLayout>