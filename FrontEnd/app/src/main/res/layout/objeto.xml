<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="12dp"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardElevation="4dp"
    app:strokeColor="@color/black"
    app:cardBackgroundColor="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="8dp"
    app:strokeWidth="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp">
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/imgobj"
                android:layout_marginRight="12dp"
                android:layout_gravity="center"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/nomobj"
                    android:fontFamily="@font/poppins_semibold"
                    android:textSize="16dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/catobj"
                    android:fontFamily="@font/poppins_mediumitalic"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_black"
                    android:id="@+id/precioobj"
                    android:textSize="15dp"
                    android:textColor="#E06C00"
                    />
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ver Detalles"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:id="@+id/btndetalles"
                android:backgroundTint="#CCCCCC"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="10dp"

                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Solicitudes"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:id="@+id/btnsolis"
                android:backgroundTint="#CCCCCC"
                android:layout_marginRight="40dp"
                />

            <ImageButton
                android:id="@+id/delete"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:layout_gravity="center_vertical"
                android:src="@drawable/delete"
                android:background="@android:color/transparent"
                />
        </LinearLayout>

    </LinearLayout>


</com.google.android.material.card.MaterialCardView>