<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="24dp"
    android:background="@color/white">

    <ImageView
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:src="@drawable/paypal_logo"
        android:layout_marginBottom="32dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Monto a pagar:"
        android:textSize="16sp"
        android:fontFamily="@font/poppins_regular"
        android:textColor="#6B6B6B"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/tvMonto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$350.00"
        android:textSize="32sp"
        android:fontFamily="@font/poppins_bold"
        android:textColor="#0349A5"
        android:layout_marginBottom="32dp"/>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:indeterminateTint="#0349A5"
        android:layout_marginBottom="24dp"/>

    <TextView
        android:id="@+id/tvEstado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Procesando pago..."
        android:textSize="18sp"
        android:fontFamily="@font/poppins_medium"
        android:textColor="#1D1D1F"
        android:gravity="center"
        android:layout_marginBottom="32dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnVolver"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Volver al inicio"
        android:backgroundTint="#0349A5"
        android:textColor="@color/white"
        android:fontFamily="@font/poppins_medium"
        app:cornerRadius="12dp"
        android:visibility="gone"/>

</LinearLayout>