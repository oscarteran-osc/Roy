<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA"
    tools:context=".misobjetos.detalles">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Galería de imágenes -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="0dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/mainimg"
                    android:layout_width="match_parent"
                    android:layout_height="280dp"
                    android:scaleType="centerCrop"
                    android:background="#E0E0E0"
                    android:contentDescription="Imagen principal" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:orientation="horizontal"
                    android:layout_marginTop="12dp"
                    android:weightSum="3">

                    <ImageView
                        android:id="@+id/mini1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:scaleType="centerCrop"
                        android:background="?attr/selectableItemBackground"
                        android:contentDescription="Miniatura 1" />

                    <ImageView
                        android:id="@+id/mini2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:scaleType="centerCrop"
                        android:background="?attr/selectableItemBackground"
                        android:contentDescription="Miniatura 2" />

                    <ImageView
                        android:id="@+id/mini3"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:focusable="true"
                        android:scaleType="centerCrop"
                        android:background="?attr/selectableItemBackground"
                        android:contentDescription="Miniatura 3" />
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Información del objeto -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Nombre -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nombre del producto"
                android:textSize="13sp"
                android:textColor="#6B7280"
                android:fontFamily="@font/poppins_semibold" />

            <TextView
                android:id="@+id/tvNombreObjeto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="#111827"
                android:layout_marginTop="4dp"
                android:padding="12dp"
                android:background="@drawable/rounded_edittext_background"
                android:fontFamily="@font/poppins_medium"
                tools:text="Casa de campaña" />

            <!-- Precio -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Precio por día"
                android:textSize="13sp"
                android:textColor="#6B7280"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/poppins_semibold" />

            <TextView
                android:id="@+id/tvPrecioObjeto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="#E06C00"
                android:layout_marginTop="4dp"
                android:padding="12dp"
                android:background="@drawable/rounded_edittext_background"
                android:fontFamily="@font/poppins_bold"
                tools:text="$350" />

            <!-- Categoría -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Categoría"
                android:textSize="13sp"
                android:textColor="#6B7280"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/poppins_semibold" />

            <TextView
                android:id="@+id/tvCategoriaObjeto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="#111827"
                android:layout_marginTop="4dp"
                android:padding="12dp"
                android:background="@drawable/rounded_edittext_background"
                android:fontFamily="@font/poppins_medium"
                tools:text="Exteriores" />

            <!-- Descripción -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Descripción"
                android:textSize="13sp"
                android:textColor="#6B7280"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/poppins_semibold" />

            <TextView
                android:id="@+id/descobj"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="#374151"
                android:layout_marginTop="4dp"
                android:padding="12dp"
                android:background="@drawable/rounded_edittext_background"
                android:minHeight="100dp"
                android:fontFamily="@font/poppins_regular"
                tools:text="Casa de campaña ideal para acampar, capacidad para 4 personas..." />

            <!-- Botones -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:orientation="horizontal"
                android:gravity="end">
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnBorrar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Borrar"
                    android:textAllCaps="false"
                    android:textSize="16sp"
                    android:fontFamily="@font/poppins_semibold"
                    app:cornerRadius="12dp"
                    app:icon="@android:drawable/ic_menu_delete"
                    app:iconPadding="8dp"
                    app:strokeWidth="2dp"
                    app:strokeColor="#E53935"
                    android:textColor="#E53935"
                    style="@style/Widget.Material3.Button.OutlinedButton" />
                <Space
                    android:layout_width="12dp"
                    android:layout_height="1dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnEditar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Editar"
                    android:textAllCaps="false"
                    android:textSize="16sp"
                    android:fontFamily="@font/poppins_semibold"
                    app:icon="@android:drawable/ic_menu_edit"
                    app:iconPadding="8dp"
                    app:cornerRadius="12dp"
                    style="@style/Widget.Material3.Button.TonalButton" />

                <Space
                    android:layout_width="12dp"
                    android:layout_height="1dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/cancelar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Volver"
                    android:textAllCaps="false"
                    android:textSize="16sp"
                    android:fontFamily="@font/poppins_semibold"
                    app:cornerRadius="12dp"
                    style="@style/Widget.Material3.Button.OutlinedButton" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</ScrollView>