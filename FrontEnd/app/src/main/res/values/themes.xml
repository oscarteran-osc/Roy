<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.ROY" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.ROY" parent="Base.Theme.ROY" />

    <style name="RoyChip.Base" parent="Widget.MaterialComponents.Chip.Choice">
        <!-- TAMAÃ‘O NECESARIO -->
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="chipCornerRadius">20dp</item>
        <item name="chipMinHeight">32dp</item>
    </style>

    <style name="RoyChip.Filled" parent="RoyChip.Base">
        <item name="chipBackgroundColor">@color/blue_primary</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="CircleImage">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>


    <style name="RoyChip.Outline" parent="RoyChip.Base">
        <item name="chipStrokeColor">@color/blue_primary</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="chipBackgroundColor">@color/white</item>
        <item name="android:textColor">@color/blue_primary</item>
    </style>




</resources>